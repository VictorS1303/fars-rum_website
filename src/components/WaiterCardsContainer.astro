---
import Section from "./Section.astro";
import Logo from "./Logo.astro";
---

<Section class="waiter-cards-container" id="waiter_cards_container">
    <Logo isFaded={true}/>
    <div class="container waiter-cards-container" id="waiter_cards_container">
    </div>
</Section>


<style>
    .container.waiter-cards-container {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        height: 95%;
        width: 90%;
    }
</style>
